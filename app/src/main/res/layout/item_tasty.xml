<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@drawable/borderline"
    android:layout_marginVertical="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tasty_tv_title"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            android:gravity="left|center_vertical"
            android:background="#00FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text="글 제목" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F1F2F4"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/tasty_img_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@drawable/feed_profile2" />

            <LinearLayout
                android:layout_toEndOf="@+id/tasty_img_profile"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tasty_tv_writer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="이름"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <TextView
                    android:id="@+id/tasty_tv_date"
                    android:layout_marginVertical="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="2020년 9월 3일 오후 3:51" />
            </LinearLayout>

            <ImageView
                android:id="@+id/tasty_btn_more"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_dots"
                android:layout_alignParentEnd="true"
                app:tint="@android:color/darker_gray" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tasty_tv_content"
                android:layout_marginVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="글 내용"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
            <ImageView
                android:id="@+id/tasty_iv_imgcontents"
                android:scaleType="fitCenter"
                android:layout_below="@id/tasty_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/tasty_btn_map"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:background="@drawable/rounding_btn"
                android:layout_below="@id/tasty_iv_imgcontents"
                android:text="위치 보기"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/tasty_tv_like_lb"
                android:layout_marginVertical="5dp"
                android:layout_below="@+id/tasty_btn_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:text="좋아요" />

            <TextView
                android:id="@+id/tasty_tv_like_count"
                android:layout_marginHorizontal="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tasty_tv_like_lb"
                android:layout_alignBottom="@+id/tasty_tv_like_lb"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:text="5" />


            <TextView
                android:id="@+id/tasty_tv_comment"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tasty_tv_like_count"
                android:layout_alignBottom="@+id/tasty_tv_like_lb"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:text="댓글" />

            <TextView
                android:id="@+id/tasty_tv_commentcount"
                android:layout_marginHorizontal="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tasty_tv_comment"
                android:layout_alignBottom="@+id/tasty_tv_comment"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:text="5" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F1F2F4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/tasty_btn_like"
                android:paddingVertical="15dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/tasty_img_like"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_like_normal" />

                <TextView
                    android:id="@+id/tasty_tv_like"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:text="좋아요" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tasty_btn_comment"
                android:paddingVertical="15dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_comment" />
                <TextView
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:text="댓글쓰기" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>